        <div class="music-playlist">
            <div class="headline"><h2>RadioGP - Playlist</h2></div>
             <div class="box-music">
                <input type="text" id="input-box" placeholder="adicione uma música">
                <button onclick="addMusic()" class="add">Adicionar</button>
             </div>
             <ul id="music-list">
                <!--<li class="checked"></li>
                <li></li>
                <li></li>
                <li></li> -->
             </ul>
             <script>
                const inputBox = document.getElementById("input-box")
                const musicList = document.getElementById("music-list")

                function addMusic(){
                    if(inputBox.value === ''){
                        alert("Adicione uma música!")
                    }
                    else{
                        let li = document.createElement("li");
                        li.innerHTML = inputBox.value;
                        musicList.appendChild(li);
                        let span = document.createElement("span");
                        span.innerHTML = "x";
                        li.appendChild(span);

                    }
                    inputBox.value = "";
                    saveData();
                }

                musicList.addEventListener("click", function(e){
                    if(e.target.tagName === "LI"){
                        e.target.classList.toggle("checked");
                        saveData();
                    }
                    else if(e.target.tagName === "SPAN"){
                        e.target.parentElement.remove();
                        saveData();
                    }
                }, false);

                function saveData(){
                    localStorage.setItem("data", musicList.innerHTML );
                }
                function showTask(){
                    musicList.innerHTML = localStorage.getItem("data");
                }
                showTask()
             </script>
        </div>
